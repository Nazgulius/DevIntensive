<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity"    >

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordination_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_profil_spacing_256dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_foto_256"
                    android:fitsSystemWindows="true"/>

                <android.support.v7.widget.Toolbar
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:titleTextColor="@color/color_white"
                    app:layout_collapseMode="pin"
                    android:layout_marginTop="@dimen/spacing_normal_16dp"/>

            </android.support.design.widget.CollapsingToolbarLayout>



        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".ui.activities.MainActivity">

                <!--Scroll total bar-->
            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar_layout_TotalBar"
                android:theme="@style/AppTheme.AppBarOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Bar total-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:background="#5d5d5d"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/layout_score">

                        <TextView
                            android:id="@+id/rating_title_tv"
                            style="@style/rating_value"/>

                        <TextView
                            android:id="@+id/rating_body_tv"
                            style="@style/text_view.bottom"
                            android:fontFamily="@string/sans_serif_condensed"
                            android:text="@string/rating"/>
                    </LinearLayout>

                    <View
                        style="@style/vertical_line"></View>

                    <LinearLayout
                        style="@style/layout_score">

                        <TextView
                            android:id="@+id/lines_code_title_tv"
                            style="@style/lines_code_value"/>

                        <TextView
                            android:id="@+id/lines_code_body_tv"
                            style="@style/text_view.bottom"
                            android:fontFamily="sans_serif_condensed"
                            android:text="@string/lines_code"/>
                    </LinearLayout>

                    <View
                        style="@style/vertical_line"></View>

                    <LinearLayout
                        style="@style/layout_score">

                        <TextView
                            android:id="@+id/project_title_tv"
                            style="@style/projects_value"/>

                        <TextView
                            android:id="@+id/project_body_tv"
                            style="@style/text_view.bottom"
                            android:fontFamily="sans_serif_condensed"
                            android:text="@string/projects"/>
                    </LinearLayout>
                </LinearLayout>


            </android.support.design.widget.AppBarLayout>

                <!--Mobile-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small_8dp"
                    android:layout_marginTop="@dimen/spacing_small_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_phone_black_24dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32dp"
                        android:layout_marginRight="@dimen/spacing_normal_16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/phone_et"
                                style="@style/textProfile"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="sans_serif_condensed"
                                android:hint="@string/phone_title"
                                android:inputType="phone"
                                android:text="@string/phone_text"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/coll_img"
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/line_size"
                    android:layout_marginLeft="@dimen/spacing_larger_72dp"
                    android:background="@color/color_grey_light"/>

                <!--Email-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small_8dp"
                    android:layout_marginTop="@dimen/spacing_small_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_mail_black_24dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32dp"
                        android:layout_marginRight="@dimen/spacing_normal_16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/mail_et"
                                style="@style/textProfile"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="sans_serif_condensed"
                                android:hint="@string/mail_title"
                                android:inputType="textEmailAddress"
                                android:text="@string/mail_text"/>

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/line_size"
                    android:layout_marginLeft="@dimen/spacing_larger_72dp"
                    android:background="@color/color_grey_light"/>

                <!--social-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small_8dp"
                    android:layout_marginTop="@dimen/spacing_small_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/vk_circle"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32dp"
                        android:layout_marginRight="@dimen/spacing_normal_16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/profid_et"
                                style="@style/textProfile"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="sans_serif_condensed"
                                android:hint="@string/prof_social_title"
                                android:inputType="text"
                                android:text="@string/prof_social_text"/>

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/line_size"
                    android:layout_marginLeft="@dimen/spacing_larger_72dp"
                    android:background="@color/color_grey_light"/>

                <!--GitHub-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small_8dp"
                    android:layout_marginTop="@dimen/spacing_small_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/github_circle"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32dp"
                        android:layout_marginRight="@dimen/spacing_normal_16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/repositorii_et"
                                style="@style/textProfile"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="sans_serif_condensed"
                                android:hint="@string/repozitori_title"
                                android:inputType="textMultiLine"
                                android:text="@string/repozitori_text"/>

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/line_size"
                    android:layout_marginLeft="@dimen/spacing_larger_72dp"
                    android:background="@color/color_grey_light"/>

                <!--About-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small_8dp"
                    android:layout_marginTop="@dimen/spacing_small_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/spacing_medium_32dp"
                        android:layout_marginRight="@dimen/spacing_normal_16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/about_et"
                                style="@style/textProfile"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="sans_serif_condensed"
                                android:hint="@string/about_title"
                                android:inputType="textMultiLine"
                                android:text="@string/about_me"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="@dimen/fab_space_right"/>

    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>