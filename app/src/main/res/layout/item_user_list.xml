<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="@dimen/spacing_small_8dp"
    app1:cardBackgroundColor="@color/color_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.softdesign.devintensive.ui.views.AspectRatioImageView
                android:id="@+id/user_photo_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/user_foto"
                android:scaleType="centerCrop"
                app1:aspect_ratio="1.78"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_full_name"
                android:textColor="@color/color_white"
                android:fontFamily="@string/ff_medium"
                android:textSize="@dimen/font_large_24"
                android:paddingRight="@dimen/spacing_normal_16dp"
                android:paddingLeft="@dimen/spacing_normal_16dp"
                android:paddingBottom="@dimen/spacing_medial_24dp"
                android:layout_gravity="bottom"/>
        </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_larger_72dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="@dimen/spacing_zero_0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/rating_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@string/ff_medium"
                        android:textSize="@dimen/font_medium_20"
                        android:textColor="@color/color_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Рейтинг"
                        android:fontFamily="@string/ff_regular"
                        android:textSize="@dimen/font_small_14"
                        android:textColor="@color/color_black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/spacing_zero_0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5">
                    <TextView
                        android:id="@+id/code_lines_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@string/ff_medium"
                        android:textSize="@dimen/font_medium_20"
                        android:textColor="@color/color_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Написано строк кода"
                        android:fontFamily="@string/ff_regular"
                        android:textSize="@dimen/font_small_14"
                        android:textColor="@color/color_black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/spacing_zero_0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/projects_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@string/ff_medium"
                        android:textSize="@dimen/font_medium_20"
                        android:textColor="@color/color_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Проектов"
                        android:fontFamily="@string/ff_regular"
                        android:textSize="@dimen/font_small_14"
                        android:textColor="@color/color_black"/>

                </LinearLayout>

            </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bio_txt"
            android:textColor="@color/color_grey_light"
            android:text="@string/user_profile.empty_bio"
            android:maxLines="3"
            android:paddingRight="@dimen/spacing_normal_16dp"
            android:paddingLeft="@dimen/spacing_normal_16dp"
            android:fontFamily="@string/ff_regular"
            android:textSize="@dimen/font_small_14"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey_light"
            android:layout_marginTop="@dimen/spacing_normal_16dp"
            android:layout_marginBottom="@dimen/spacing_small_8dp"/>
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/more_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Просмотр"
            android:textColor="@color/color_accent"
            android:paddingLeft="@dimen/spacing_normal_16dp"
            android:paddingRight="@dimen/spacing_normal_16dp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
